                <p class="text-muted">There are no verified claims awaiting approval at this time.</p>
            </div>
        </div>
    }
    else
    {
        <!-- Claims Cards -->
        @foreach (var claim in Model)
        {
            <div class="card mb-4 border-0 shadow">
                <div class="card-header bg-info text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-file-invoice-dollar"></i> Claim #@claim.ClaimID
                        </h5>
                        <span class="badge bg-light text-dark px-3 py-2">
                            <i class="fas fa-check-circle"></i> Verified by Coordinator
                        </span>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Lecturer Information -->
                        <div class="col-md-4">
                            <h6 class="text-primary mb-3"><i class="fas fa-user-tie"></i> Lecturer Information</h6>
                            <table class="table table-sm table-borderless">
                                <tr>
                                    <td class="text-muted"><strong>Name:</strong></td>
                                    <td>@claim.LecturerName</td>
                                </tr>
                                <tr>
                                    <td class="text-muted"><strong>Email:</strong></td>
                                    <td><a href="mailto:@claim.LecturerEmail">@claim.LecturerEmail</a></td>
                                </tr>
                                <tr>
                                    <td class="text-muted"><strong>Department:</strong></td>
                                    <td><span class="badge bg-secondary">@claim.Department</span></td>
                                </tr>
                            </table>
                        </div>

                        <!-- Claim Details -->
                        <div class="col-md-4">
                            <h6 class="text-primary mb-3"><i class="fas fa-info-circle"></i> Claim Details</h6>
                            <table class="table table-sm table-borderless">
                                <tr>
                                    <td class="text-muted"><strong>Month:</strong></td>
                                    <td>@claim.Month</td>
                                </tr>
                                <tr>
                                    <td class="text-muted"><strong>Hours Worked:</strong></td>
                                    <td><strong>@claim.HoursWorked</strong> hours</td>
                                </tr>
                                <tr>
                                    <td class="text-muted"><strong>Hourly Rate:</strong></td>
                                    <td>R @claim.HourlyRate.ToString("N2")</td>
                                </tr>
                                <tr>
                                    <td class="text-muted"><strong>Total Amount:</strong></td>
                                    <td><h5 class="text-success mb-0">R @claim.TotalAmount.ToString("N2")</h5></td>
                                </tr>
                            </table>
                        </div>

                        <!-- Timeline -->
                        <div class="col-md-4">
                            <h6 class="text-primary mb-3"><i class="fas fa-history"></i> Timeline</h6>
                            <table class="table table-sm table-borderless">
                                <tr>
                                    <td class="text-muted"><strong>Submitted:</strong></td>
                                    <td>@claim.SubmittedDate.ToString("dd MMM yyyy HH:mm")</td>
                                </tr>
                                <tr>
                                    <td class="text-muted"><strong>Verified:</strong></td>
                                    <td>@claim.VerifiedDate?.ToString("dd MMM yyyy HH:mm")</td>
                                </tr>
                                <tr>
                                    <td class="text-muted"><strong>Days Pending:</strong></td>
                                    <td>
                                        <span class="badge bg-warning text-dark">
                                            @((DateTime.Now - claim.SubmittedDate).Days) days
                                        </span>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(claim.AdditionalNotes))
                    {
                        <div class="alert alert-light mt-3">
                            <strong><i class="fas fa-sticky-note"></i> Additional Notes:</strong>
                            <p class="mb-0 mt-2">@claim.AdditionalNotes</p>
                        </div>
                    }

                    <!-- Supporting Documents -->
                    @if (claim.Documents != null && claim.Documents.Any())
                    {
                        <div class="mt-3">
                            <h6><i class="fas fa-paperclip"></i> Supporting Documents (@claim.Documents.Count)</h6>
                            <div class="list-group">
                                @foreach (var doc in claim.Documents)
                                {
                                    <a href="@Url.Action("DownloadDocument", "Claim", new { id = doc.DocumentID })"
                                       class="list-group-item list-group-item-action" target="_blank">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <i class="fas fa-file-pdf text-danger"></i>
                                                <strong>@doc.FileName</strong>
                                            </div>
                                            <small class="text-muted">
                                                Uploaded: @doc.UploadedAt.ToString("dd MMM yyyy HH:mm")
                                            </small>
                                        </div>
                                    </a>
                                }
                            </div>
                        </div>
                    }

                    <!-- Action Buttons -->
                    <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                        <a href="@Url.Action("Details", "Claim", new { id = claim.ClaimID })"
                           class="btn btn-outline-primary">
                            <i class="fas fa-eye"></i> View Full Details
                        </a>

                        <div>
                            <button type="button" class="btn btn-danger me-2"
                                    data-bs-toggle="modal"
                                    data-bs-target="#rejectModal-@claim.ClaimID">
                                <i class="fas fa-times"></i> Reject
                            </button>
                            <button type="button" class="btn btn-success btn-lg px-5"
                                    onclick="approveClaim(@claim.ClaimID, @claim.TotalAmount)">
                                <i class="fas fa-check-double"></i> Approve & Process Payment
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Reject Modal -->
            <div class="modal fade" id="rejectModal-@claim.ClaimID" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <form asp-action="RejectApproval" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="claimId" value="@claim.ClaimID" />

                            <div class="modal-header bg-danger text-white">
                                <h5 class="modal-title">
                                    <i class="fas fa-exclamation-triangle"></i> Reject Claim #@claim.ClaimID
                                </h5>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <div class="alert alert-warning">
                                    <strong>Lecturer:</strong> @claim.LecturerName<br>
                                    <strong>Amount:</strong> R @claim.TotalAmount.ToString("N2")<br>
                                    <strong>Status:</strong> Already verified by coordinator
                                </div>

                                <div class="mb-3">
                                    <label for="rejectionReason-@claim.ClaimID" class="form-label">
                                        <strong>Reason for Rejection <span class="text-danger">*</span></strong>
                                    </label>
                                    <textarea name="rejectionReason"
                                      id="rejectionReason-@claim.ClaimID"
                                      class="form-control"
                                      rows="4"
                                      required
                                      placeholder="Please provide a detailed reason for rejecting this claim..."></textarea>
                                    <small class="text-muted">This will be visible to the lecturer</small>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-times"></i> Reject Claim
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }

        <!-- Summary Statistics -->
        <div class="row mt-4">
            <div class="col-md-3">
                <div class="card border-0 shadow-sm bg-info text-white">
                    <div class="card-body text-center">
                        <h6 class="text-white-50">Claims to Approve</h6>
                        <h2>@Model.Count()</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm bg-success text-white">
                    <div class="card-body text-center">
                        <h6 class="text-white-50">Total Amount</h6>
                        <h2>R @Model.Sum(c => c.TotalAmount).ToString("N2")</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm bg-warning text-white">
                    <div class="card-body text-center">
                        <h6 class="text-white-50">Total Hours</h6>
                        <h2>@Model.Sum(c => c.HoursWorked)</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm bg-primary text-white">
                    <div class="card-body text-center">
                        <h6 class="text-white-50">Departments</h6>
                        <h2>@Model.Select(c => c.Department).Distinct().Count()</h2>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Approve Claim Form (Hidden) -->
<form id="approveForm" asp-action="ApproveClaim" method="post" style="display:none;">
    @Html.AntiForgeryToken()
    <input type="hidden" name="claimId" id="approveClaimId" />
</form>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        function approveClaim(claimId, amount) {
            Swal.fire({
                title: 'Approve Claim?',
                html: `
                    <p>You are about to approve this claim for payment processing.</p>
                    <div class="alert alert-info mt-3">
                        <strong>Claim ID:</strong> #${claimId}<br>
                        <strong>Amount:</strong> R ${amount.toFixed(2)}
                    </div>
                    <p class="text-muted small">This action cannot be undone.</p>
                `,
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#28a745',
                cancelButtonColor: '#6c757d',
                confirmButtonText: '<i class="fas fa-check"></i> Yes, Approve',
                cancelButtonText: 'Cancel',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById('approveClaimId').value = claimId;
                    document.getElementById('approveForm').submit();
                }
            });
        }
    </script>
}




