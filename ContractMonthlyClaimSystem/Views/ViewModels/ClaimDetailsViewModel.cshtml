@model List<ContractMonthlyClaimSystem.ViewModels.ClaimDetailsViewModel>
@{
    ViewData["Title"] = "Track Claims";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="fas fa-list-check"></i> My Claims</h2>
            <p class="text-muted">Track the status of all your submitted claims</p>
        </div>
        <a href="@Url.Action("Submit", "Claim")" class="btn btn-primary btn-lg">
            <i class="fas fa-plus-circle"></i> Submit New Claim
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
                <h4>No Claims Found</h4>
                <p class="text-muted">You haven't submitted any claims yet.</p>
                <a href="@Url.Action("Submit", "Claim")" class="btn btn-primary">
                    <i class="fas fa-plus-circle"></i> Submit Your First Claim
                </a>
            </div>
        </div>
    }
    else
    {
        <!-- Summary Cards -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card border-0 shadow-sm bg-warning bg-gradient text-white">
                    <div class="card-body">
                        <h6 class="text-white-50">Pending</h6>
                        <h2 class="mb-0">@Model.Count(c => c.StatusID == 1)</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm bg-info bg-gradient text-white">
                    <div class="card-body">
                        <h6 class="text-white-50">Verified</h6>
                        <h2 class="mb-0">@Model.Count(c => c.StatusID == 2)</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm bg-success bg-gradient text-white">
                    <div class="card-body">
                        <h6 class="text-white-50">Approved</h6>
                        <h2 class="mb-0">@Model.Count(c => c.StatusID == 3)</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm bg-danger bg-gradient text-white">
                    <div class="card-body">
                        <h6 class="text-white-50">Rejected</h6>
                        <h2 class="mb-0">@Model.Count(c => c.StatusID == 4)</h2>
                    </div>
                </div>
            </div>
        </div>

        <!-- Claims List -->
        @foreach (var claim in Model)
        {
            <div class="card mb-3 border-0 shadow-sm hover-shadow">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <div class="d-flex align-items-center mb-2">
                                <h5 class="mb-0 me-3">
                                    <i class="fas fa-file-invoice text-primary"></i> Claim #@claim.ClaimID
                                </h5>
                                @switch (claim.StatusID)
                                {
                                    case 1:
                                        <span class="badge bg-warning text-dark px-3 py-2">
                                            <i class="fas fa-clock"></i> Pending Review
                                        </span>
                                        break;
                                    case 2:
                                        <span class="badge bg-info px-3 py-2">
                                            <i class="fas fa-check"></i> Verified
                                        </span>
                                        break;
                                    case 3:
                                        <span class="badge bg-success px-3 py-2">
                                            <i class="fas fa-check-double"></i> Approved
                                        </span>
                                        break;
                                    case 4:
                                        <span class="badge bg-danger px-3 py-2">
                                            <i class="fas fa-times"></i> Rejected
                                        </span>
                                        break;
                                }
                            </div>

                            <div class="row mt-3">
                                <div class="col-md-6">
                                    <p class="mb-1">
                                        <i class="fas fa-calendar text-muted"></i>
                                        <strong>Month:</strong> @claim.Month
                                    </p>
                                    <p class="mb-1">
                                        <i class="fas fa-clock text-muted"></i>
                                        <strong>Hours:</strong> @claim.HoursWorked hrs
                                    </p>
                                </div>
                                <div class="col-md-6">
                                    <p class="mb-1">
                                        <i class="fas fa-money-bill text-muted"></i>
                                        <strong>Rate:</strong> R @claim.HourlyRate.ToString("N2")/hr
                                    </p>
                                    <p class="mb-1">
                                        <i class="fas fa-calendar-plus text-muted"></i>
                                        <strong>Submitted:</strong> @claim.SubmittedDate.ToString("dd MMM yyyy")
                                    </p>
                                </div>
                            </div>

                            <!-- Status Timeline -->
                            <div class="mt-3">
                                <div class="progress" style="height: 25px;">
                                    @{
                                        var progress = claim.StatusID switch
                                        {
                                            1 => 33,
                                            2 => 66,
                                            3 => 100,
                                            4 => 100,
                                            _ => 0
                                        };
                                        var progressColor = claim.StatusID == 4 ? "bg-danger" : "bg-success";
                                    }
                                    <div class="progress-bar @progressColor progress-bar-striped @(claim.StatusID != 3 && claim.StatusID != 4 ? "progress-bar-animated" : "")"
                                         role="progressbar" style="width: @progress%">
                                        @if (claim.StatusID == 1)
                                        {
                                            <span>Awaiting Coordinator Review</span>
                                        }
                                        else if (claim.StatusID == 2)
                                        {
                                            <span>Awaiting Manager Approval</span>
                                        }
                                        else if (claim.StatusID == 3)
                                        {
                                            <span>Claim Approved - Payment Processing</span>
                                        }
                                        else if (claim.StatusID == 4)
                                        {
                                            <span>Claim Rejected</span>
                                        }
                                    </div>
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(claim.RejectionReason))
                            {
                                <div class="alert alert-danger mt-3 mb-0">
                                    <strong><i class="fas fa-info-circle"></i> Rejection Reason:</strong>
                                    <p class="mb-0 mt-1">@claim.RejectionReason</p>
                                </div>
                            }
                        </div>

                        <div class="col-md-4 text-end">
                            <div class="mb-3">
                                <h3 class="text-success mb-0">R @claim.TotalAmount.ToString("N2")</h3>
                                <small class="text-muted">Total Amount</small>
                            </div>

                            <div class="d-grid gap-2">
                                <a href="@Url.Action("Details", "Claim", new { id = claim.ClaimID })"
                                   class="btn btn-outline-primary">
                                    <i class="fas fa-eye"></i> View Details
                                </a>

                                @if (claim.Documents != null && claim.Documents.Any())
                                {
                                    <button type="button" class="btn btn-outline-secondary"
                                            data-bs-toggle="collapse"
                                            data-bs-target="#docs-@claim.ClaimID">
                                        <i class="fas fa-paperclip"></i> Documents (@claim.Documents.Count)
                                    </button>
                                }
                            </div>
                        </div>
                    </div>

                    @if (claim.Documents != null && claim.Documents.Any())
                    {
                        <div class="collapse mt-3" id="docs-@claim.ClaimID">
                            <div class="card card-body bg-light">
                                <h6><i class="fas fa-folder-open"></i> Supporting Documents</h6>
                                <ul class="list-unstyled mb-0">
                                    @foreach (var doc in claim.Documents)
                                    {
                                        <li class="mb-2">
                                            <a href="@Url.Action("DownloadDocument", "Claim", new { id = doc.DocumentID })"
                                               class="text-decoration-none">
                                                <i class="fas fa-file-pdf text-danger"></i> @doc.FileName
                                            </a>
                                            <small class="text-muted ms-2">
                                                Uploaded: @doc.UploadedAt.ToString("dd MMM yyyy HH:mm")
                                            </small>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }

        <!-- Total Summary -->
        <div class="card border-0 shadow-sm bg-primary text-white mt-4">
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-4">
                        <h6 class="text-white-50">Total Claims</h6>
                        <h3>@Model.Count()</h3>
                    </div>
                    <div class="col-md-4">
                        <h6 class="text-white-50">Total Earned (Approved)</h6>
                        <h3>R @Model.Where(c => c.StatusID == 3).Sum(c => c.TotalAmount).ToString("N2")</h3>
                    </div>
                    <div class="col-md-4">
                        <h6 class="text-white-50">Pending Amount</h6>
                        <h3>R @Model.Where(c => c.StatusID == 1 || c.StatusID == 2).Sum(c => c.TotalAmount).ToString("N2")</h3>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

