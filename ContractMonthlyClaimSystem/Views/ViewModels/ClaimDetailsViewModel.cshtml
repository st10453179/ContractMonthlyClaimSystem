<form id="verifyForm" asp-action="Verify" method="post" style="display:none;">
    @Html.AntiForgeryToken()
    <input type="hidden" name="claimId" id="verifyClaimId" />
</form>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <script>
        function verifyClaim(claimId) {
            if (confirm('Are you sure you want to verify this claim? This action cannot be undone.')) {
                document.getElementById('verifyClaimId').value = claimId;
                document.getElementById('verifyForm').submit();
            }
        }

        // Search functionality
        document.getElementById('searchInput').addEventListener('keyup', function() {
            filterTable();
        });

        document.getElementById('departmentFilter').addEventListener('change', function() {
            filterTable();
        });

        document.getElementById('sortBy').addEventListener('change', function() {
            sortTable(this.value);
        });

        function filterTable() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const department = document.getElementById('departmentFilter').value.toLowerCase();
            const rows = document.querySelectorAll('.claim-row');

            rows.forEach(row => {
                const lecturer = row.getAttribute('data-lecturer').toLowerCase();
                const dept = row.getAttribute('data-department').toLowerCase();

                const matchesSearch = lecturer.includes(searchTerm) || dept.includes(searchTerm);
                const matchesDept = !department || dept === department;

                row.style.display = matchesSearch && matchesDept ? '' : 'none';
            });
        }

        function sortTable(sortBy) {
            const table = document.getElementById('claimsTable');
            const tbody = table.querySelector('tbody');
            const rows = Array.from(tbody.querySelectorAll('tr.claim-row'));

            rows.sort((a, b) => {
                let aVal, bVal;

                switch(sortBy) {
                    case 'amount':
                        aVal = parseFloat(a.cells[6].textContent.replace(/[^0-9.-]+/g, ''));
                        bVal = parseFloat(b.cells[6].textContent.replace(/[^0-9.-]+/g, ''));
                        return bVal - aVal;
                    case 'name':
                        aVal = a.cells[1].textContent.trim();
                        bVal = b.cells[1].textContent.trim();
                        return aVal.localeCompare(bVal);
                    case 'date':
                    default:
                        aVal = new Date(a.cells[7].textContent.trim());
                        bVal = new Date(b.cells[7].textContent.trim());
                        return aVal - bVal;
                }
            });

            rows.forEach(row => tbody.appendChild(row));
        }

        function resetFilters() {
            document.getElementById('searchInput').value = '';
            document.getElementById('departmentFilter').value = '';
            document.getElementById('sortBy').value = 'date';
            filterTable();
            sortTable('date');
        }
    </script>
}

